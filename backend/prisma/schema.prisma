generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  
  // 1. Granular Credit Balances (Separate Pools)
  creditsPicDrift  Int    @default(10)
  creditsImageFX   Int    @default(10)
  creditsVideoFX1  Int    @default(10)
  creditsVideoFX2  Int    @default(10)

  // Keep legacy field for safety/compatibility
  creditBalance Int       @default(20)

  creditSystem  String    @default("COMMERCIAL") // COMMERCIAL ($) or INTERNAL (pts)
  role          String    @default("USER")       // USER or ADMIN
  adminNotes    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  posts         Post[]
  assets        Asset[]
  brandConfig   BrandConfig?
  roiMetrics    ROIMetrics?
  creditRequests CreditRequest[]
}

// TOTAL ADMIN CONTROL: Pricing for every parameter in your UI
model GlobalSettings {
  id             String @id @default("singleton")

  // --- PICDRIFT (Dashboard) ---
  pricePicDrift_5s   Int @default(1)
  pricePicDrift_10s  Int @default(2)

  // --- PIC FX (Dashboard) ---
  pricePicFX_Standard Int @default(1)
  pricePicFX_Carousel Int @default(3) 
  pricePicFX_Batch    Int @default(1) // Per image cost for batch uploads

  // --- VIDEO FX 1 (Dashboard - Kling) ---
  priceVideoFX1_10s   Int @default(2)
  priceVideoFX1_15s   Int @default(3)

  // --- VIDEO FX 2 (Dashboard - Sora/OpenAI) ---
  priceVideoFX2_4s    Int @default(2)
  priceVideoFX2_8s    Int @default(4)
  priceVideoFX2_12s   Int @default(6)

  // --- ASSET EDITOR (EditAssetModal) ---
  priceEditor_Standard Int @default(1)
  priceEditor_Pro      Int @default(2)
  priceEditor_Enhance  Int @default(1)
  priceEditor_Convert  Int @default(1) // Auto/Custom Ratio Conversion

  // --- DRIFT PATH (EditAssetModal) ---
  priceAsset_DriftPath Int @default(2) // Generate Path button

  updatedAt      DateTime @updatedAt
}

model Post {
  id               String   @id @default(uuid())
  userId           String
  title            String?
  prompt           String
  enhancedPrompt   String?
  imageReference   String?
  mediaType        String?
  mediaUrl         String?
  mediaProvider    String?
  generatedEndFrame String?
  status           String   @default("NEW")
  platform         String?
  script           Json?
  generationParams Json?
  progress         Int      @default(0)
  error            String?
  generationStep   String?
  requiresApproval Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Asset {
  id          String   @id @default(uuid())
  userId      String
  url         String
  aspectRatio String
  type        String   @default("IMAGE") 
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  originalAssetId String?  
  originalAsset   Asset?   @relation("AssetHistory", fields: [originalAssetId], references: [id])
  variations      Asset[]  @relation("AssetHistory")
}

model BrandConfig {
  id             String   @id @default(uuid())
  userId         String   @unique
  companyName    String?
  primaryColor   String?
  secondaryColor String?
  logoUrl        String?
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ROIMetrics {
  id             String   @id @default(uuid())
  userId         String   @unique
  postsCreated   Int      @default(0)
  timeSaved      Int      @default(0)
  mediaGenerated Int      @default(0)
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CreditRequest {
  id        String   @id @default(uuid())
  userId    String
  email     String
  name      String?
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}